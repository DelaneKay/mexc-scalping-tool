# Environment Configuration
NODE_ENV=development

# MEXC API Configuration (Optional - not required for public data)
# Get your API keys from https://mexc.com/api
MEXC_API_KEY=your_mexc_api_key_here
MEXC_API_SECRET=your_mexc_api_secret_here
MEXC_SANDBOX=false

# Discord Notifications (Optional)
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Application Settings
DEFAULT_TIMEFRAME=1m
DEFAULT_UNIVERSE=oi200
MIN_VOLUME_24H=500000
REFRESH_INTERVAL=10000

# Alert Thresholds
BURST_THRESHOLD=75
VOLATILITY_THRESHOLD=1.5
VOLUME_SURGE_THRESHOLD=0.6

# API Configuration (for development)
VITE_API_BASE=http://localhost:8888/.netlify/functions